<h1>Ajouter un Nouveau Restaurant</h1>

<%= form_with model: @restaurant, local: true do |form| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "erreur") %> empêchent cet enregistrement d'être sauvegardé :</h2>
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, options_for_select(["chinese", "italian", "japanese", "french", "belgian"]) %>
  </div>

  <div class="actions">
    <%= form.submit 'Créer Restaurant' %>
  </div>
<% end %>

<%= link_to 'Retour à la liste', restaurants_path %>
